<%- include('../partials/head') %>
<%- include('../partials/mhs-navbar') %>
<div class="main-panel">
    <div class="content-wrapper">
        <%- include('../partials/messages') %>
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title mb-0">Daftar Pengumuman</p>
                        <div class="table-responsive">
                            <table id="pengumumanTable" class="table table-striped table-borderless">
                                <thead>
                                    <tr>
                                        <th>Matakuliah</th>
                                        <th>Judul Pengumuman</th>
                                        <th>Keterangan</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (data.length > 0) { %>
                                        <% data.forEach(function(pengumuman) { %>
                                            <tr>
                                                <td><%= pengumuman.nama_matakuliah %></td>
                                                <td><%= pengumuman.judul %></td>
                                                <td><%= pengumuman.keterangan %></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">Tidak ada pengumuman.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/foot') %>
