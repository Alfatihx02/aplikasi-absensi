<%- include('../partials/head') %>
<%- include('../partials/dosen-navbar2') %>
<div class="main-panel">
    <div class="content-wrapper">
        <%- include('../partials/messages') %>
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit Tugas</h4>
                        <form action="/dosen/update_tugas/<%= tugas.id_tugas %>" class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="judul_tugas">Judul Tugas</label>
                                <input type="text" name="judul_tugas" class="form-control" id="judul_tugas" value="<%= tugas.judul_tugas %>" placeholder="Masukkan judul tugas" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="file_tugas">File Upload</label>
                                <input type="file" name="file_tugas" class="file-upload-default" id="file_tugas">
                                <div class="input-group col-xs-12 d-flex align-items-center">
                                    <input type="text" class="form-control file-upload-info" id="file_upload_info" disabled placeholder="<%= tugas.file_tugas ? 'File sudah diupload' : 'Upload File' %>" />
                                    <span class="input-group-append ms-2">
                                        <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                                    </span>
                                </div>
                                <small class="form-text text-muted">Biarkan kosong jika tidak ingin mengubah file.</small>
                            </div>
                            
                            <button type="submit" class="btn btn-primary me-2">Update</button>
                            <a href="/dosen/create_tugas/<%= tugas.id_jadwal %>" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>

<%- include('../partials/foot') %>