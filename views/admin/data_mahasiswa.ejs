<%- include('../partials/head') %>
<div class="container-scroller">
    <%- include('../partials/admin-navbar') %>
      <div class="main-panel">
        <%- include('../partials/messages') %>
        <div class="content-wrapper">
          <div class="row">         
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Tabel mahasiswa</h4>
                  <a href="/admin/mhs_create" class="btn btn-rounded btn-primary">Tambah mahasiswa</a>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Nama</th>
                          <th>NRP</th>
                          <th>Jenis Kelamin</th>
                          <th>Kelas</th>
                          <th>Email</th>
                          <th>Aksi</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for( let i = 0; i < rows.length; i++ ) { %>
                        
                            <tr>
                              <td><%= i+1 %></td>
                              <td><%= rows[i].Nama %></td>
                              <td><%= rows[i].NRP %></td>
                              <td><%= rows[i].jenis_kelamin %></td>
                              <td><%= rows[i].nama_kelas %></td>
                              <td><%= rows[i].email %></td>
                              <td>
                                <a href="/admin/mhs_edit/<%= rows[i].id_mahasiswa %>" class="btn btn-rounded btn-warning">Edit</a>
                                <a href="/admin/mhs_delete/<%= rows[i].id_mahasiswa %>" class="btn btn-rounded btn-danger">Hapus</a>
                              </td>
                            </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('../partials/foot') %>