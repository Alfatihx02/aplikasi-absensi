<%- include('../partials/head') %>
<div class="container-scroller">
    <!-- partial:../../partials/_navbar.html -->
    <%- include('../partials/admin-navbar') %>
      <!-- partial -->
      <div class="main-panel">
        <%- include('../partials/messages') %>
        <div class="content-wrapper">
          <div class="row">
            
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Tabel Matakuliah</h4>
                  <a href="/matakuliah/create" class="btn btn-rounded btn-primary">Tambah Matakuliah</a>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Nama matakuliah</th>
                          <th>Aksi</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for( let i = 0; i < rows.length; i++ ) { %>
                        
                            <tr>
                              <td><%= i+1 %></td>
                              <td><%= rows[i].nama_matakuliah %></td>
                              <td>
                                <a href="/matakuliah/edit/<%= rows[i].id_matakuliah %>" class="btn btn-rounded btn-warning">Edit</a>
                                <a href="/matakuliah/delete/<%= rows[i].id_matakuliah %>" class="btn btn-rounded btn-danger">Hapus</a>
                              </td>
                            </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->

        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
<%- include('../partials/foot') %>