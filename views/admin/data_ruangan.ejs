<%- include('../partials/head') %>
<div class="container-scroller">
    <%- include('../partials/admin-navbar') %>
      <div class="main-panel">
        <%- include('../partials/messages') %>
        <div class="content-wrapper">
          <div class="row">            
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Tabel Ruangan</h4>
                  <a href="/ruangan/create" class="btn btn-rounded btn-primary">Tambah Ruangan</a>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Nama ruangan</th>
                          <th>Aksi</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for( let i = 0; i < rows.length; i++ ) { %>
                        
                            <tr>
                              <td><%= i+1 %></td>
                              <td><%= rows[i].nama_ruangan %></td>
                              <td>
                                <a href="/ruangan/edit/<%= rows[i].id_ruangan %>" class="btn btn-rounded btn-warning">Edit</a>
                                <a href="/ruangan/delete/ <%= rows[i].id_ruangan %>" class="btn btn-rounded btn-danger">Hapus</a>
                              </td>
                            </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('../partials/foot') %>